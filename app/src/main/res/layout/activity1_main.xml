<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/lockImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/lock"
            android:padding="14dp"
            android:src="@drawable/lock" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/lockImageView"
            android:layout_alignParentStart="true"
            android:padding="15dp"
            android:text="@string/username"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/menuImageView"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/menu_btn"
            android:padding="14dp"
            android:src="@drawable/menu_lines" />

        <TextView
            android:id="@+id/transactionDetailsTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="112dp"
            android:padding="14dp"
            android:text=""
            android:hint="@string/_40"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/token"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="154dp"
            android:contentDescription="@string/paid_val"
            android:padding="14dp"
            android:src="@drawable/ic_paid" />

        <ImageView
            android:id="@+id/token1"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:contentDescription="@string/paid_val"
            android:padding="14dp"
            android:src="@drawable/ic_paid" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewPostCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="25dp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="0" />

        <TextView
            android:id="@+id/textViewFollowerCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="215sp"
            android:layout_marginTop="25sp"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="0" />

        <TextView
            android:id="@+id/textViewFollowingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="315sp"
            android:layout_marginTop="25sp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="0" />

        <TextView
            android:id="@+id/textViewPostsLabel"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="115sp"
            android:layout_marginTop="50sp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/posts" />

        <TextView
            android:id="@+id/textViewFollowersLabel"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="195sp"
            android:layout_marginTop="50sp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="followers" />

        <TextView
            android:id="@+id/textViewFollowingLabel"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="295sp"
            android:layout_marginTop="50sp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="following" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewProfilePic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="2dp"
                android:contentDescription="@string/profile_pic"
                android:src="@drawable/profile_pic" />

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/username"

                android:textColor="@android:color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:text="@string/edit_profile"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="#ECDFDF"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="7dp"
            android:layout_marginStart="20dp" />

        <Button
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:textAlignment="center"
            android:text="@string/share_profile"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="#EFE6E6"
            android:background="@drawable/btn_bg"
            android:layout_marginTop="7dp"
            android:layout_marginStart="210dp" />
    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="TextLayout"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:contentDescription="Viewpager" />

    <ImageView
        android:id="@+id/homeImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:contentDescription="@string/home"
        android:src="@drawable/home"
        app:tint="@android:color/black" />

</LinearLayout>
